<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.YOLOv11nHumanDetection" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryVariant">@color/app_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/app_accent</item>
        <item name="colorSecondaryVariant">@color/app_accent</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        
        <!-- Customize your theme here -->
        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>
    
    <!-- No action bar theme for main activity -->
    <style name="Theme.YOLOv11nHumanDetection.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <!-- Fullscreen theme for camera activity -->
    <style name="Theme.YOLOv11nHumanDetection.Fullscreen" parent="Theme.YOLOv11nHumanDetection.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/black</item>
    </style>
    
    <!-- Camera preview theme -->
    <style name="Theme.YOLOv11nHumanDetection.CameraPreview" parent="Theme.YOLOv11nHumanDetection.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    
    <!-- Detection overlay theme -->
    <style name="Theme.YOLOv11nHumanDetection.Overlay" parent="Theme.YOLOv11nHumanDetection.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    
    <!-- Settings theme -->
    <style name="Theme.YOLOv11nHumanDetection.Settings" parent="Theme.YOLOv11nHumanDetection">
        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:colorAccent">@color/app_accent</item>
    </style>
    
    <!-- Statistics theme -->
    <style name="Theme.YOLOv11nHumanDetection.Statistics" parent="Theme.YOLOv11nHumanDetection">
        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:colorAccent">@color/app_accent</item>
    </style>
    
    <!-- Performance monitor theme -->
    <style name="Theme.YOLOv11nHumanDetection.PerformanceMonitor" parent="Theme.YOLOv11nHumanDetection.NoActionBar">
        <item name="android:windowBackground">@color/black_transparent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="android:textColorHint">@color/dark_gray</item>
    </style>
    
    <!-- Button themes -->
    <style name="Widget.YOLOv11n.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/app_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <style name="Widget.YOLOv11n.Button.Primary" parent="Widget.YOLOv11n.Button">
        <item name="android:background">@color/app_primary</item>
    </style>
    
    <style name="Widget.YOLOv11n.Button.Secondary" parent="Widget.YOLOv11n.Button">
        <item name="android:background">@color/app_accent</item>
    </style>
    
    <style name="Widget.YOLOv11n.Button.Camera" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/camera_border</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:minHeight">40dp</item>
        <item name="cornerRadius">6dp</item>
    </style>
    
    <style name="Widget.YOLOv11n.Button.Capture" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/app_accent</item>
        <item name="tint">@color/white</item>
        <item name="fabSize">normal</item>
        <item name="elevation">8dp</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>
    
    <!-- Text styles -->
    <style name="Text.YOLOv11n.Headline" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Text.YOLOv11n.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Text.YOLOv11n.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="Text.YOLOv11n.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="Text.YOLOv11n.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="Text.YOLOv11n.Status" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">monospace</item>
    </style>
    
    <style name="Text.YOLOv11n.FPS" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/fps_high</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">monospace</item>
    </style>
    
    <style name="Text.YOLOv11n.Confidence" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Card styles -->
    <style name="Widget.YOLOv11n.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/dark_gray</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
    
    <!-- Seek bar style for settings -->
    <style name="Widget.YOLOv11n.SeekBar" parent="Widget.MaterialComponents.SeekBar">
        <item name="colorAccent">@color/app_accent</item>
        <item name="android:progressTint">@color/app_accent</item>
        <item name="android:thumbTint">@color/app_accent</item>
    </style>
    
    <!-- Progress bar style -->
    <style name="Widget.YOLOv11n.ProgressBar" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorColor">@color/app_accent</item>
        <item name="trackColor">@color/dark_gray</item>
        <item name="indicatorSize">48dp</item>
        <item name="trackThickness">4dp</item>
    </style>
    
</resources>